generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model FeedMetaData {
  id       Int      @id @default(autoincrement())
  feedUrl   String   @unique
  title     String?
  remote_url      String?
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  contents  FeedContent[]
}

model FeedContent {
  contentId   Int          @id @default(autoincrement())
  parentId    Int
  contentUrl  String       @unique
  title       String?
  parent      FeedMetaData @relation(fields: [parentId], references: [id])
}